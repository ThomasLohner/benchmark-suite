<VirtualHost *:80>
  ServerName <%= @domainname %>
  DocumentRoot "/var/www/<%= @domainname %>/"

  CustomLog /var/log/apache2/access.log combined
  ErrorLog /var/log/apache2/error_log
  LogLevel warn

  <Directory "/var/www/<%= @domainname %>/">
    Options Followsymlinks
    AllowOverride All
    Require all granted
  </Directory>
</VirtualHost>
